# API connection settings - ensure this uses the Docker service name
API_URL=http://django-search-api:8000
API_HOST=django-search-api
API_PORT=8000

# Gemini API settings
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-lite

# Django PostgreSQL settings (only used if USE_SQLITE=false)
DJANGO_DB_HOST=your_db_host
DJANGO_DB_PORT=your_db_port
DJANGO_DB_NAME=your_db_name
DJANGO_DB_USER=your_db_username
DJANGO_DB_PASSWORD=your_db_password
DJANGO_DB_SEARCH_NAME=search

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Django settings
DJANGO_SECRET_KEY=your_secret_key_here
DJANGO_DEBUG=True

# Search settings
USE_PROXIES=false
SEARCH_TIMEOUT=30
SAVE_SEARCH_RESULTS=true